<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.quiztrip.quiztrip.Pergunta3">

    <TextView
        android:id="@+id/cabeçalho"
        android:layout_width="371dp"
        android:layout_height="41dp"
        android:background="@color/colorPrimaryDark"
        android:text="Qual o destino de intercâmbio ideal pra você ? "
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/per3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/p3"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/bt_p3a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/p3a"
        android:textColor="?attr/actionMenuTextColor"
        android:onClick="proxima4"
        android:background="@drawable/botao_clicavel"/>

    <Button
        android:id="@+id/bt_p3b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/p3b"
        android:onClick="proxima4"
        android:background="@drawable/botao_clicavel"/>

    <Button
        android:id="@+id/bt_p3c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/p3c"
        android:onClick="proxima4"
        android:background="@drawable/botao_clicavel"/>

    <Button
        android:id="@+id/bt_p3d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/p3d"
        android:onClick="proxima4"
        android:background="@drawable/botao_clicavel"/>

</LinearLayout>
